/* pages/mail/mail.wxss */
.mail_page {
  width: 100%;
  height: 100%;
  background-color: whitesmoke;
  position: relative;
}
.mail_routine {
  padding: 30rpx 0;
  background-color: whitesmoke;
  background-repeat: repeat;
  
}
.mail_hd view {
  font-weight: 400;
  font-size: 24rpx;
  text-align: center;
}
.mail_hd view.mail_logo {
  margin-bottom: 20rpx;
  font-family: 'HanziPenSC-W5';
  font-size: 66rpx;
  color: rgba(0,0,0,0.60);
  letter-spacing: 0;
  text-align: center;
}
.mail_hd .mail_title {
  font-size: 36rpx;
  padding: 5rpx 30rpx;
  border: 1px solid cadetblue;
  border-radius: 2px;
  width: 300rpx;
  margin: 20rpx auto 30rpx auto;
}
.mail_desc {
  position: relative;
}
.mail_desc view{
  margin-bottom: 10rpx;
}
.mail_desc image {
  transform: rotate(20deg);
  position: absolute;
  top: 30%;
  left: 60%;
  width: 300rpx;
}
.mail_stat {
  width: 100%;
  margin: 80rpx auto 30rpx auto;
}
.divider_dot {
  border-top: 2px dashed cadetblue;
  width: 80%;
  margin: 0 auto;
}
.mail_bd_content {
  font-size: 26rpx;
  width: 80%;
  margin: 30rpx auto;
}
.mail_bd_content image{
  width: 100rpx;
  height: 100rpx;
}
.bg_dialog {
  background-color: #387ef5;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  color: #fff;
  position: relative;
  margin-top: 10rpx;
}
.bg_dialog:before {
  content:"";
   position: absolute;
   right: 100%;
   top: 15rpx;
   width: 0;
   height: 0;
   border-top: 7px solid transparent;
   border-right: 9px solid #387ef5;
   border-bottom: 7px solid transparent;
}
.poster_record {
  margin-bottom: 40rpx;
}
.mail_ft {
  font-weight: 300;
  font-size: 28rpx;
  margin: 40rpx auto auto 20rpx; 
  text-align: center;
}
.mail_ft image{
  display: inline-block;
  margin-top: 20rpx;
  width: 150rpx;
}
.mail_content {
  font-family: 'HanziPenSC-W3';
  padding: 30rpx 20rpx;
  background-repeat: repeat;
  font-size: 26rpx;
  line-height: 55rpx;
}
.content_title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.content_text, .content_image {
  margin-bottom: 20rpx;
  text-align: justify;
  width: 100%;
}
.content_image image{
  width: 100%;
}
.mail_wrapper{
  min-height: 100%;
}
.btn_back {
  width: 80rpx;
  height: 80rpx;
  position: fixed;
  left: calc(100% - 120rpx);
  bottom: 40rpx;
  background: #fff;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.14), 0 8rpx 16rpx rgba(0, 0, 0, 0.28);
}
@keyframes slidedown {
  from {
      transform: translateY(0);
  }
  to {
      transform: translateY(100%);
  }
}
.slidedown {
  animation: slidedown 1s linear ;
}
.slideup {
  animation: slideup 1s linear ;
}
@keyframes slideup {
  from {
      transform: translateY(100%);
  }
  to {
      transform: translateY(0);
  }
}