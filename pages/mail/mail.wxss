/* pages/mail/mail.wxss */
.mail_page {
  width: 100%;
  height: 100%;
  background-color: whitesmoke;
  background-repeat: repeat;
  padding: 30rpx 0;
}
.mail_hd view {
  font-weight: 400;
  font-size: 24rpx;
  text-align: center;
}
.mail_logo {
  margin-bottom: 20rpx;
}
.mail_logo image{
  width: 160rpx;
}
.mail_hd .mail_title {
  font-size: 36rpx;
  padding: 5rpx 30rpx;
  border: 1px solid cadetblue;
  border-radius: 2px;
  width: 300rpx;
  margin: 20rpx auto 30rpx auto;
}
.mail_desc {
  position: relative;
}
.mail_desc view{
  margin-bottom: 10rpx;
}
.mail_desc image {
  transform: rotate(20deg);
  position: absolute;
  top: 30%;
  left: 60%;
  width: 300rpx;
}
.mail_stat {
  width: 100%;
  margin: 80rpx auto 30rpx auto;
}
.divider_dot {
  border-top: 2px dashed cadetblue;
  width: 80%;
  margin: 0 auto;
}
.mail_bd_content {
  font-size: 26rpx;
  width: 80%;
  margin: 30rpx auto;
}
.mail_bd_content image{
  width: 100rpx;
  height: 100rpx;
}
.bg_dialog {
  background-color: #387ef5;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  color: #fff;
  position: relative;
  margin-top: 10rpx;
}
.bg_dialog:before {
  content:"";
   position: absolute;
   right: 100%;
   top: 15rpx;
   width: 0;
   height: 0;
   border-top: 7px solid transparent;
   border-right: 9px solid #387ef5;
   border-bottom: 7px solid transparent;
}
.poster_record {
  margin-bottom: 40rpx;
}
.mail_ft {
  font-weight: 300;
  font-size: 28rpx;
  margin: 40rpx auto auto 20rpx; 
  text-align: center;
}
.mail_ft image{
  display: inline-block;
  margin-top: 20rpx;
  width: 100rpx;
}